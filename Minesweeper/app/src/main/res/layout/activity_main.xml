<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="hu.ait.android.minesweeper.MainActivity">

    <Chronometer
        android:id="@+id/chronometer"
        android:format="%s"
        android:paddingTop="20dp"
        android:paddingRight="80dp"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#7dcfd4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:gravity="center">
            <hu.ait.android.minesweeper.MinesweeperView
                android:id="@+id/MinesweeperView"
                android:layout_width="200dp"
                android:layout_height="200dp" />
    </LinearLayout>


    <Switch
        android:id="@+id/btnSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:checked="false"
        android:text="@string/flag_mode"
        android:textColor="#7dcfd4"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/reset_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:text="@string/reset_game"
        android:textColor="#ffffff"/>

</LinearLayout>
